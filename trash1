  <script>
    // Wave animation (no SMIL, works in all browsers)
    const wavePath = document.getElementById('wavePath');
    const values = [
      "M0,160 C480,240 960,80 1440,160 L1440,320 L0,320 Z",
      "M0,200 C480,100 960,280 1440,200 L1440,320 L0,320 Z"
    ];
    let i = 0;
    setInterval(() => {
      wavePath.setAttribute('d', values[i]);
      i = (i + 1) % values.length;
    }, 2000);

    // Mouse and touch move effect (debounced)
    const container = document.getElementById('main');
    let lastMove = 0;
    function moveContainer(x, y) {
      container.style.transform = `translate(${x}px, ${y}px)`;
    }
    function handleMove(x, y) {
      const now = Date.now();
      if (now - lastMove > 16) { // ~60fps
        moveContainer(x, y);
        lastMove = now;
      }
    }
    document.addEventListener('mousemove', e => {
      const x = (e.clientX / window.innerWidth - 0.5) * 10;
      const y = (e.clientY / window.innerHeight - 0.5) * 10;
      handleMove(x, y);
    });
    document.addEventListener('touchmove', e => {
      if (e.touches.length) {
        const touch = e.touches[0];
        const x = (touch.clientX / window.innerWidth - 0.5) * 10;
        const y = (touch.clientY / window.innerHeight - 0.5) * 10;
        handleMove(x, y);
      }
    });
  </script>
